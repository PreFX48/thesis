<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4">
  <AS  id="AS0"  routing="Floyd">
    <host id="master" core="2" speed="1e1flops"/>
    <host id="host1" core="2" speed="2e9flops"/>
    <host id="host2" core="2" speed="2e9flops"/>
    <router id="router1"/>

    <link id="masterlink" bandwidth="1000000MBps" latency="1us"/>
    <link id="link1" bandwidth="1MBps" latency="100us"/>
    <link id="link2" bandwidth="1MBps" latency="100us"/>
    
    <route src="master" dst="router1"><link_ctn id="masterlink"/></route>
    <route src="host1" dst="router1"><link_ctn id="link1"/></route>
    <route src="host2" dst="router1"><link_ctn id="link2"/></route>

  </AS>
</platform>
